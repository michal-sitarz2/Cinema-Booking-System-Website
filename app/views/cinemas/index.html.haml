%h2=t('.about_header')
%p=t('.about_paragraph')

- if @cinemas.length != 0
  - @counter = 0
  .container
    - @cinemas.each do |cinema|
      - if @counter.modulo(2) == 0
        .row
          .col-xs-6
            %img{:class => "image_cinema_index",:src => "#{cinema.image}", :alt => "#{t('movies.errors.image_missing')}"}
          .col-xs-6
            %p
              %b= "#{t('cinemas.attributes.name')}#{t('colon')}"
            %p= cinema.name
            %br
            %p
              %b= "#{t('cinemas.attributes.address')}#{t('colon')}"
            %p= cinema.name

      - else
        .row
          .col-xs-6
            %p
              %b= "#{t('cinemas.attributes.name')}#{t('colon')}"
            %p= cinema.name
            %br
            %p
              %b= "#{t('cinemas.attributes.address')}#{t('colon')}"
            %p= cinema.address
          .col-xs-6
            %img{:class => "image_cinema_index", :src => "#{cinema.image}", :alt => "#{t('movies.errors.image_missing')}"}
      - @counter+=1
      %br
      %hr
      %br
