.container{:id => "screenings_container"}
  %h1{:id => "screenig_index_header"}= "Screenings for #{@date.strftime("%d %B")}"
  %hr
  -@screenings.each do |movie, screenings|
    %br
    .row
      .col-xs-4.col-sm-3
        %img{:class => "screening_index_images", :src => "#{movie.poster}", :alt => "#{movie.title} Poster Currently Unavailable"}
      .col-xs-7
        %h3= "#{movie.title}"
        %p
          %b= t('.director')
          = movie.director
        %p
          %b
            = t('.actors')
          = movie.actors
        %p
          %b
            = t('.genres')
          = movie.genre
        %p
          %b
            = t('.duration')
          = "#{movie.duration} #{t('.minute')}"
    %br
    %hr
    .row.justify-content-start
      -screenings.each do |screening|
        .col-xs-2
          = button_to screening.screening_time.strftime("%H:%M"), line_items_path(screening_id: screening), data: { confirm: "Add this item to cart?" }, class: "screening_button_times"
          %p{:class => "text_screening_type"}
            %b= screening.screening_type
            = " | Â£"
            = screening.price
    %hr
    %br
