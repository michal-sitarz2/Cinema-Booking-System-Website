.container{:id => "screenings_container"}
  %h1{:id => "screenig_index_header"}= "Screenings for #{@date.strftime("%d %B")}"
  %hr
  -@screenings.each do |movie, screenings|
    %br
    .row
      .col-xs-4.col-sm-3
        %img{:class => "screening_index_images", :src => "#{movie.poster}", :alt => "#{movie.title} Poster Currently Unavailable"}
      .col-xs-7
        %h3= "#{movie.title}"
        %p
          %b
            = "Director: "
          = movie.director
        %p
          %b
            = "Actors: "
          = movie.actors
        %p
          %b
            = "Genre: "
          = movie.genre
        %p
          %b
            = "Duration: "
          = "#{movie.duration} min"
    %br
    %hr
    .row.justify-content-start
      -screenings.each do |screening|
        .col-xs-2
          %button{:class => "screening_button_times", :onclick => "alert('Hello world!')", :type => "button"}= screening.screening_time.strftime("%H:%M")
          %p{:class => "text_screening_type"}
            %b= screening.screening_type
    %hr
    %br
