= form_for @screening, id: "screeningForm" do |f|
  - if @screening.errors.any?
    #error_explanation
      %h2= "#{pluralize(@screening.errors.count, "error")} #{t('prohibited_p1')} #{t('screenings.name_l')} #{t('prohibited_p2')}#{t('colon')}"
      %ul
        - @screening.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :movie
    = f.collection_select :movie_id, Movie.all, :id, :title
  .field
    = f.label :cinema
    = f.collection_select :cinema, Cinema.all, :name, :name
  .field
    = f.label :price
    = f.text_field :price, class: "positiveNumber"
  .field
    = f.label :screening_time
    = f.text_field :screening_time
  .field
    = f.label :screening_date
    = f.date_select :screening_date
  .field
    = f.label :arena
    = f.text_field :arena
  .field
    = f.label :available_seats
    = f.number_field :available_seats, class: "postiveNumber"
  .field
    = f.label :screening_type
    = f.text_field :screening_type, class: "isType"
  .actions
    = f.submit t('save_button')
