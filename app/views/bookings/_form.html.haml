= form_for @booking do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :movie_title
    = f.text_field :movie_title
  .field
    = f.label :booked_date
    = f.text_field :booked_date
  .field
    = f.label :booke_time
    = f.text_field :booke_time
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :cinema
    = f.text_field :cinema
  .field
    = f.label :arena
    = f.text_field :arena
  .field
    = f.label :total_price
    = f.text_field :total_price
  .actions
    = f.submit 'Save'
