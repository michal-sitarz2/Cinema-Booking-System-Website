%header{:id => "pageHeader"}
  - if user_signed_in?
    %nav{:id => "login_nav"}
      = "#{current_user.email} #{t('vertical_line')}"
      = link_to t('profile'), edit_user_registration_path
      = "|"
      = link_to t('logout'), destroy_user_session_path, method: 'delete'
      - if cart_has_items
        %spam{:id => "cart-link"}
          = link_to "Cart: ", cart_path(@cart)
        %p{:id => "cart-number"}
          = cart_count_over_one

  #nav_title
    %h1{:id => "pageTitle"}
      %a{:id=>"pageTitleLink", :href => "/"}= t('.title')
      = image_tag("film-roll.png", :alt => "#{t('app_title')} #{t('.logo')}", :id => "imageLogo")

  %hr{:id => "horizontalLine"}

  #navbar_button
    %button.openbtn{:onclick => "openNav()"}= t('.burger_menu')

  #nav
    %nav{:class => "navbar navbar-static-top navbar-expand-sm nav-pills nav-fill bg-dark navbar-dark justify-content-center"}
      %ul{:class => "navbar-nav"}
        %li{:class => "nav-item"}
          %a{:class => "nav-link", :href => "/"}= t('.home')
        %li{:class => "nav-item"}
          %a{:class => "nav-link", :href => "/booking"}= t('.book_tickets')
        - if user_signed_in? and current_user.admin
          %li{:class => "nav-item"}
            %a{:class => "nav-link", :href => "/allresources"}= t('.resources_table')
        %li{:class => "nav-item"}
          %a{:class => "nav-link", :href => "/cinemas"}= t('.about_us')
        %li{:class => "nav-item"}
          %a{:class => "nav-link", :href => "/contact"}= t('.contact')
        - if not user_signed_in?
          %li{:class => "nav-item"}
            = link_to t('login'),  new_user_session_path, class: "nav-link"
          %li{:class => "nav-item"}
            = link_to t('sign_up'), new_user_registration_path, class: "nav-link"
        - else
          %li{:class => "nav-item"}
            %a{:class => "nav-link", :href => "/bookings"}= t('.view_booking')



  #mySidebar.sidebar
    %a.closebtn{:href => "javascript:void(0)", :onclick => "closeNav()"}= t('.close_X')
    %a{:href => "/"}= t('.home')
    %a{:href => "/booking"}= t('.book_tickets')
    - if user_signed_in? and current_user.admin
      %a{:href => "/allresources"}= t('.resources_table')
    %a{:href => "/cinemas"}= t('.about_us')
    %a{:href => "/contact"}= t('.contact')
    - if not user_signed_in?
      = link_to t('login'),  new_user_session_path, class: "nav-link"
      = link_to t('sign_up'), new_user_registration_path, class: "nav-link"
    - else
      %a{:class => "nav-link", :href => "/bookings"}= t('.view_booking')


- flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?
