= form_for @actor do |f|
  - if @actor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actor.errors.count, "error")} prohibited this actor from being saved:"
      %ul
        - @actor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :movie
    = f.text_field :movie
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :surname
    = f.text_field :surname
  .actions
    = f.submit 'Save'
