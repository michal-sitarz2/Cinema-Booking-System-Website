%h1= t('.title')
%p= t('.contact_us')

#ContactForm
  = form_tag request_contact_path, method: 'post', :html => {:id => "contactForm"} do
    = label_tag :name, "#{t('contact.name')}#{t('colon')}"
    = text_field_tag :name, '', title: "#{t('.enter')} #{t('contact.name')}", size: 50

    = label_tag :email, "#{t('contact.email')}#{t('colon')}"
    = email_field_tag :email, '', title: "#{t('.enter')} #{t('contact.email')}"

    = label_tag :telephone, "#{t('contact.telephone')}#{t('colon')}"
    = telephone_field_tag :telephone, '', title: "#{t('.enter')} #{t('contact.telephone')} #{t('.number')}"

    = label_tag :message, t('.message')
    = text_field_tag :message, '', title: t('.enter_message'), size: 100

    = submit_tag t('home.shared.header.contact')
